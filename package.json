{
  "name": "vue-graphql-loader",
  "version": "0.3.2",
  "author": "Zephraph <zephraph@gmail.com>",
  "main": "./lib/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zephraph/vue-graphql-loader"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "build": "tsc -d",
    "build:watch": "tsc --watch",
    "clean": "rimraf lib",
    "test": "jest",
    "test:watch": "run-p build:watch \"test --watch\"",
    "lint": "tslint --fix --force -e src/__fixtures__/** src/**/*.ts",
    "release": "np --no-publish",
    "precommit": "lint-staged",
    "postcheckout": "yarn",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "prettier --write",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": ["@semantic-release/github", "@semantic-release/npm"]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": true,
        "tsConfig": "tsconfig.test.json"
      }
    },
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "testRegex": "(/__tests__/.*|\\.spec)\\.(ts|tsx)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "vue"],
    "snapshotSerializers": ["<rootDir>/node_modules/jest-serializer-vue"]
  },
  "prettier": {
    "singleQuote": true
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/git": "^7.0.0",
    "@types/graphql": "^0.13.0",
    "@types/jest": "^23.3.10",
    "@types/loader-utils": "^1.1.0",
    "@types/node": "^10.0.7",
    "@vue/test-utils": "^1.0.0-beta.15",
    "apollo-client": "^2.2.3",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "jest-serializer-vue": "^2.0.0",
    "lint-staged": "^8.0.0",
    "memory-fs": "^0.4.1",
    "np": "^3.0.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.18.2",
    "require-from-string": "^2.0.2",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.3.1",
    "travis-deploy-once": "^5.0.0",
    "ts-jest": "^23.0.0",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^3.2.2",
    "vue": "^2.4.4",
    "vue-jest": "^3.0.0",
    "vue-loader": "^15.0.9",
    "vue-template-compiler": "^2.5.13",
    "webpack": "^4.27.1"
  },
  "dependencies": {
    "graphql": "^14.0.0-rc.1",
    "graphql-tag": "^2.4.2",
    "loader-utils": "^1.1.0"
  },
  "peerDependencies": {
    "vue-loader": "^15.0.0",
    "webpack": "^4.0.0"
  },
  "resolutions": {
    "babel-register/source-map-support": "0.5.5"
  }
}
